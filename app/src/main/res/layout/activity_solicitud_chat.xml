<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SolicitudChatActivity"
    android:orientation="vertical"
    android:layout_marginBottom="80dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:id="@+id/SendRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/register_button2"
            android:text="CHAT REQUEST"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="AbrirPopUp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/CancelRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have already sent a request"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="18dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/register_button2"
            android:text="CANCEL REQUEST"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="DeleteRequest"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

</LinearLayout>