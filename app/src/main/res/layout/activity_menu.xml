<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu_row_2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="horizontal"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/guides_button"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:onClick="GuidesButton"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/guides" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="GuidesButton"
                    android:text="@string/guide"
                    android:textAlignment="center"
                    android:textColor="?android:attr/colorForeground"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/forumButton"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:onClick="ForumButton"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/info_icono" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="ForumButton"
                    android:text="@string/info"
                    android:textAlignment="center"
                    android:textColor="?android:attr/colorForeground"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/chat_button"
                    android:layout_width="wrap_content"
                    android:layout_height="167dp"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:onClick="ChatButton"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/chat" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="ChatButton"
                    android:text="@string/chat"
                    android:textAlignment="center"
                    android:textColor="?android:attr/colorForeground"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/news_button"
                    android:layout_width="wrap_content"
                    android:layout_height="166dp"
                    android:layout_weight="1"
                    android:background="#00ffffff"
                    android:onClick="NewsButton"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/news" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="NewsButton"
                    android:text="@string/news"
                    android:textAlignment="center"
                    android:textColor="?android:attr/colorForeground"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>